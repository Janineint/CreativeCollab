@model CreativeCollab.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<h4>User Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* This form POSTs to the Edit action in UsersController *@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Important: Include the Id as a hidden field so the controller knows which user to update *@
            <input type="hidden" asp-for="UserID" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* Add other editable fields here if your User model has more properties *@

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                | <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}